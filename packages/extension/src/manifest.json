{
    "name": "Padloc",
    "version": "1.0.0",
    "description": "Padloc Browser Extension",
    "manifest_version": 2,
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "web_accessible_resources": [
        "icon.png",
        "Nunito-Regular.ttf",
        "Nunito-SemiBold.ttf",
        "fontawesome-webfont.ttf"
    ],
    "permissions": ["storage", "unlimitedStorage", "tabs", "activeTab"]
}
