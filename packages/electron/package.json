{
  "name": "@padloc/electron",
  "version": "3.0.4",
  "description": "Electron Wrapper for Padloc app",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/padloc/padloc.git"
  },
  "scripts": {
    "build": "rm -r app && webpack && electron-builder",
    "run": "electron/app/main.js"
  },
  "author": "MaKleSoft UG",
  "license": "GPL-3.0",
  "dependencies": {
    "@padloc/app": "^3.0.0",
    "@padloc/core": "^3.0.0",
    "electron-store": "^4.0.0",
    "electron-updater": "^4.1.2"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.0.0",
    "electron": "^6.0.7",
    "electron-builder": "^21.2.0",
    "electron-notarize": "^0.1.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "build": {
    "appId": "app.padloc",
    "directories": {
      "app": "app",
      "buildResources": "res"
    },
    "mac": {
      "hardenedRuntime" : true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist"
    },
    "win": {
      "publisherName": "Open Source Developer, Martin Kleinschrodt",
      "sign": "scripts/sign-win.js"
    },
    "linux": {
      "category": "Utility"
    },
    "protocols": {
      "name": "Padloc",
      "schemes": ["padloc"]
    },
    "afterSign": "scripts/notarize.js"
  }
}
